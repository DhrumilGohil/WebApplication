<!DOCTYPE html>
<html>
<head>
    <title>List of agency</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale = 1.0">
</head>
<body>
    <div class="wrapper">
        <div class="row text-center">
            @Html.Partial("Sidebar")
            <div class="col-lg-10 col-md-10">
                <form>
                    <div class="form-group">
                        <div class="col-lg-4">
                            <label for="Date" class="font-weight-bold">Select Retirement Date</label>
                            <input type="date" class="Retiredate form-control"/>
                            <button type="button" class="Retirebtn btn-danger px-3 py-2 rounded mt-4" style="position:absolute;top:0;left:0;margin-left:300px;">Search</button>

                        </div>
                        <div class="form-group">
                           
                        </div>
                    </div>
                </form>
                <div class="ShowReport"></div>
            </div>
        </div>

 </div>
</body>
</html>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(".Retirebtn").on("click", function () {
            var date = $(".Retiredate").val();
            if (date == "") {
                alert("Please Select Date")
            }
            else {
            var src = "../Reports/EmployeeAspx.aspx?"; 
            src = src + "Searchdate=" + date;
            var iframe = '<iframe id="reportFrame" width="100%" height="800px" scrolling="no" frameborder="0" src="' + src + '" allowfullscreen></iframe>';  
                $(".ShowReport").html(iframe);
            }
        });
        
    });
    
</script>

