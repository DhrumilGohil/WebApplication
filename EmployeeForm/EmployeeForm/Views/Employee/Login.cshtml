@model EmployeeForm.Models.Login
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <link href="~/fonts/font-awesome.min.css" rel="stylesheet" />

    <link href="~/Css/Style.css" rel="stylesheet" />

</head>
<body class="bg-primary">
    <div class="wrapper">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-xl-10 col-md-12 col-sm-12 p-5">
                @using (Html.BeginForm("ShowAllEmployee","Employee"))
                {
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                    <div class="form-box p-5">
                        <div class="row">
                            <div class="col-md-6 d-lg-block">
                                <img src="~/Content/images/gujarat.png" class="img-fluid gujimg" width="700"/>
                            </div>
                            
                            <div class="col-md-6">
                                <h1 class="Header text-center">Log In</h1>
                                <div class="form-horizontal justify-content-center">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group user mt-5">
                                        <input type="text" class="form-control username" placeholder="Username" required />
                                    </div>

                                    <div class="form-group mt-5">
                                        <input type="password" class="form-control password" placeholder="Password" title="Password contain Atleast 8 character" required />
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn  btn-submit btn-primary px-5 mt-4" style="text-align:center;">
                                            Log In
                                        </button>
                                    </div>
                                    <hr />
                                    <div class="text-center">
                                        <a class="btn btn-google btn-danger btn-user mt-5 px-5">
                                            <i class="fa fa-google"></i> Login with Google
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <a class="btn btn-facebook  btn-user mt-3 text-white px-5" style="background-color: #4267B2">
                                            <i class="fa fa-facebook"></i> Login with Facebook
                                        </a>
                                    </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                 </div>
                }
            </div>
        </div>
    </div>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



